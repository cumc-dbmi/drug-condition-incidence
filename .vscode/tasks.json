{  
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "DevContainer: Backend: Reinstall dependencies",
      "type": "shell",
      "command": "cd incidence-api && rm -rf venv && python2 -m virtualenv venv && source ${workspaceFolder}/incidence-api/venv/bin/activate && python2 ${workspaceFolder}/incidence-api/install.py",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
      {
        "label": "DevContainer: Frontend: Rebuild distribution",
        "type": "shell",
        "command": "cd client && grunt build && cd ..",
        "group": "build",
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
    },
  ]
}